process {
    withName: METAWRAP_BINNING { cpus = 1; memory = '10.0 GB'}
    withName: BIN_REFINEMENT {cpus = 2; memory = '10 GB'}
    withName: MAP_HOST_GENOME { cpus = 2; memory = '5.0 GB'}
    withName: MAG_CLEANUP_CAT { cpus = 2; memory = '1.0 GB'}
}
params {
    paired_end_forward = "/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/community_1.fastq.gz"
    paired_end_reverse = "/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/community_2.fastq.gz"
    sample_name = "minicommunity"
    mode = "paired"
    contigs = "/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/contigs.fasta"
    bam = '/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/results/bam/test/minicommunity/reads.bam'
    bam_index = '/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/results/bam/test/minicommunity/reads.bam.bai'

    bins = "/hps/software/users/rdf/metagenomics/service-team/users/vkale/eukrecover/results/binning/test/minicommunity/maxbin2_bins"

    ref_genome = "tests/resources/ref"
    ref_genome_name = "GRCh38_chr10.fasta"
    CAT_ref_db = "/hps/nobackup/rdf/metagenomics/service-team/ref-dbs/cat/CAT_prepare_20210107"
    eukcc_ref_db = "/hps/nobackup/rdf/metagenomics/service-team/ref-dbs/eukccdb2/eukcc2_db_ver_1.2"
