manifest {
    mainScript = "main.nf"
}

params {
    outdir = "GGP_pipeline_results"

    // --- INPUTS
    sample_name = ''
    single_end = ''
    paired_end_forward = ''
    paired_end_reverse = ''
    mode = '' // single or paired
    contigs = ''

    ref_genome = ''
    ref_genome_name = ''
}

profiles {

    lsf {
        workDir = params.workdir
        executor {
            name = "lsf"
            queueSize = 200
        }
        process.cache = "lenient"
    }
    singularity {
        singularity {
            enabled = true
            autoMounts = true
            cacheDir = params.singularity_cachedir
        }
    }

    ebi {
        params {
            outdir = "GGP_pipeline_results"

            sample_name = ""
            single_end = ""
            paired_end_forward = ""
            paired_end_reverse = ""
            mode = "paired"
            contigs = ""
            ref_genome = ""
            ref_genome_name = ""
            workdir = "/hps/nobackup/rdf/metagenomics/nextflow-jobstore/GGP_pipeline"
            singularity_cachedir = "/hps/nobackup/rdf/metagenomics/singularity_cache_nextflow/"
        }
        workDir = params.workdir

        executor {
            name = "lsf"
            queueSize = 200
        }
        process.cache = "lenient"

        includeConfig 'config/nf_codon.config'
    }

    local {
         docker {
            enabled = true
            autoMounts = true
        }
        executor {
            name = "local"
            cpus = 2
        }

        includeConfig 'config/nf_local.config'
    }
}
